#include <16f877a.h> //Micro Name
#device adc=8
#use delay(clock=20000000) // Oscillator Frequency
#fuses Hs,nowdt// Micro is High Ferquency And No watchdog
#define use_portb_lcd true
#include <lcd.c>

void main(){

int16 temp;
float temp2;
setup_adc_ports(analog_RA3_ref);
lcd_init();

while(true){

set_adc_channel(2);
delay_us(10);
temp=read_adc();
lcd_gotoxy(1,1);
lcd_putc("temperature=");
printf(lcd_putc, "%d",temp);
}
}




